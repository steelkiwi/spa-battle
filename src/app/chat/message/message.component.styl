.message-bubble
  display: flex
  align-items: flex-end
  margin-top: 4px
  &.companions-message
    flex-direction: row
  &.my-message
    flex-direction: row-reverse

.user-thumbnail
  width: 40px
  height: 40px
  border-radius: 50%
  margin: 0 4px
  background-position: center center
  background-repeat: no-repeat
  background-size: cover

.message-text
  position: relative
  width: 80%
  margin: 8px
  padding: 0 4px
  min-height: 40px

.message-time
  color: #9E9E9E
  font-size: 10px
  margin-bottom: 2px

.companions-message .message-text
  background-color: #E0F2F1
  &:before
    border-bottom: 10px solid #E0F2F1;
    border-left: 9px solid rgba(0, 0, 0, 0);
    position: absolute;
    bottom: 0;
    left: -8px;
    content: "";

.my-message .message-text
  background-color: #EFEBE9
  &:before
    border-bottom: 9px solid #EFEBE9;
    border-right: 9px solid rgba(0, 0, 0, 0);
    position: absolute;
    bottom: 0;
    right: -8px;
    content: "";
